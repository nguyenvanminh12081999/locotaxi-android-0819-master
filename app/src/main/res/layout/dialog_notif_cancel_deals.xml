<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:padding="@dimen/dimen_2x"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_notif"
        android:padding="@dimen/dimen_3x"
        android:gravity="center"
        android:background="@drawable/bg_dialog_top_success"
        android:text="@string/your_customer_has_canceled_the_deals"
        android:layout_width="match_parent"
        android:textSize="@dimen/text_size_large"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/btn_ok"
        android:text="@string/ok"
        android:gravity="center"
        android:textSize="@dimen/text_size_large"
        android:textColor="@color/white"
        android:padding="@dimen/dimen_2x"
        android:background="@drawable/bg_dialog_bottom_success"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>