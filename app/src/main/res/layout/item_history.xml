<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="@dimen/dimen_1x"
    android:translationZ="@dimen/dimen_05x"
    android:layout_margin="@dimen/dimen_1x"
    android:layout_height="wrap_content">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <FrameLayout
                    android:id="@+id/divider"
                    android:layout_width="@dimen/width_divider_item_history"
                    android:layout_height="@dimen/height_divider_item_history"
                    android:background="@drawable/bg_devider_history_credits" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/dimen_2x"
                    android:orientation="horizontal">

                    <com.suusoft.locoindia.widgets.textview.TextViewBold
                        android:id="@+id/tv_credits"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="230"
                        android:textColor="@color/primary"
                        android:textSize="@dimen/text_size_xxxlarge" />

                    <com.suusoft.locoindia.widgets.textview.TextViewRegular
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dimen_1x"
                        android:text="@string/credits"
                        android:textColor="@color/primary"
                        android:textSize="@dimen/text_size_small" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/dimen_1x"
                    android:orientation="vertical">

                    <com.suusoft.locoindia.widgets.textview.TextViewBold
                        android:id="@+id/tv_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Credits"
                        android:textColor="@color/primary"
                        android:textSize="@dimen/text_size_normal" />

                    <RelativeLayout

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:id="@+id/ic_history"
                            android:layout_width="@dimen/img_history"
                            android:layout_height="16dp"
                            android:layout_centerVertical="true"
                            android:src="@drawable/ic_histories" />

                        <com.suusoft.locoindia.widgets.textview.TextViewRegular
                            android:id="@+id/tv_time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="@dimen/dimen_05x"
                            android:layout_toRightOf="@+id/ic_history"
                            android:text="18:33, MON 16/12/2016"
                            android:textColor="@color/textColorPrimary"
                            android:textSize="@dimen/text_size_small" />

                    </RelativeLayout>

                    <LinearLayout
                        android:id="@+id/ll_parent"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <com.suusoft.locoindia.widgets.textview.TextViewRegular
                            android:id="@+id/lbl_email"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="To: "
                            android:textColor="@color/textColorPrimary"
                            android:textSize="@dimen/text_size_small" />

                        <com.suusoft.locoindia.widgets.textview.TextViewRegular
                            android:id="@+id/tv_email"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Suusoft@gmail.com"
                            android:textColor="@color/colorAccent"
                            android:textSize="@dimen/text_size_normal" />
                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>

            <FrameLayout
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_divider"
                android:background="@color/grey" />
        </LinearLayout>

        <FrameLayout
            android:id="@+id/btn_close"
            android:layout_width="@dimen/dimen_button_close"
            android:layout_height="@dimen/dimen_button_close"
            android:layout_alignParentRight="true">

            <ImageView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/ic_close" />
        </FrameLayout>

    </RelativeLayout>

</android.support.v7.widget.CardView>
