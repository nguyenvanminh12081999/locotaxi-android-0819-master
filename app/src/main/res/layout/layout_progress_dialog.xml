<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:wheel="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <com.suusoft.locoindia.widgets.progressbar.ProgressWheel
            android:id="@+id/pb"
            android:layout_width="@dimen/dimen_progressbar"
            android:layout_height="@dimen/dimen_progressbar"
            wheel:matProg_barColor="@color/colorPrimary"
            wheel:matProg_progressIndeterminate="true" />

        <com.suusoft.locoindia.widgets.textview.TextViewRegular
            android:id="@+id/lbl_progress_msg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_2x"
            android:layout_marginStart="@dimen/dimen_2x"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_large"
            android:visibility="gone" />
    </LinearLayout>

</RelativeLayout>