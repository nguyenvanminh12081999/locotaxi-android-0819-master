<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="titleTextColor">@color/textColorPrimary</item>
        <item name="actionMenuTextColor">@color/textColorSecondary</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <!-- White theme. -->
    <style name="AppTheme.White">
        <item name="colorControlNormal">@color/white</item>
        <item name="colorControlActivated">@color/white</item>
        <item name="colorControlHighlight">@color/white</item>
    </style>

    <!-- Black theme. -->
    <style name="AppTheme.Black">
        <item name="colorControlNormal">@color/textColorPrimary</item>
        <item name="colorControlActivated">@color/textColorSecondary</item>
        <item name="colorControlHighlight">@color/textColorSecondary</item>
    </style>

    <style name="ToolbarStyle" parent="AppTheme">
        <item name="android:textColorPrimary">@color/textColorPrimary</item>
        <item name="android:textColorSecondary">@color/textColorSecondary</item>
    </style>

    <!-- No actionbar white theme. -->
    <style name="AppTheme.NoActionBar.White">
        <item name="colorControlNormal">@color/white</item>
        <item name="colorControlActivated">@color/white</item>
        <item name="colorControlHighlight">@color/white</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!-- Button style -->
    <style name="Button" parent="@android:style/Widget.Button">
        <item name="android:textSize">@dimen/text_size_xnormal</item>
        <item name="android:textColor">@color/textColorPrimary</item>
        <item name="android:paddingBottom">@dimen/dimen_x1x</item>
        <item name="android:paddingTop">@dimen/dimen_x1x</item>
        <item name="android:paddingLeft">@dimen/dimen_2x</item>
        <item name="android:paddingRight">@dimen/dimen_2x</item>
        <item name="android:gravity">center</item>
        <item name="android:textAllCaps">true</item>
        <item name="textAllCaps">true</item>
    </style>

    <style name="Button.Primary">
        <item name="android:background">@drawable/bg_pressed_primary</item>
    </style>

    <style name="Button.Accent">
        <item name="android:background">@drawable/bg_pressed_accent</item>
    </style>

    <style name="Button.Grey">
        <item name="android:background">@drawable/bg_pressed_grey</item>
    </style>

    <style name="Button.DarkGrey">
        <item name="android:background">@drawable/bg_pressed_dark_grey</item>
    </style>

    <style name="Button.DeleteAll">
        <item name="android:background">@drawable/bg_pressed_delete_all</item>
    </style>

    <style name="Button.Facebook">
        <item name="android:background">@drawable/bg_pressed_facebook</item>
    </style>

    <style name="Button.Google">
        <item name="android:background">@drawable/bg_pressed_google</item>
    </style>

    <!-- Custom Ratingbar -->
    <style name="custom_rating" parent="@android:style/Widget.RatingBar">
        <item name="colorControlNormal">@color/grey</item>
        <item name="colorControlActivated">@color/yellow</item>
        <item name="android:numStars">5</item>
        <item name="android:max">5</item>
        <item name="android:stepSize">0.5</item>
    </style>

    <!-- Base application theme. -->
    <style name="AppNoActionBar" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <!--my account - about fragment-->
    <style name="my_account_style_editext" parent="Widget.AppCompat.EditText">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:padding">@dimen/dimen_1x</item>
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:textSize">@dimen/text_size_normal</item>
        <item name="android:singleLine">true</item>
        <item name="android:gravity">right</item>
        <item name="android:hint">@string/input</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">0.6</item>
        <item name="android:layout_marginRight">@dimen/dimen_2x</item>
    </style>

    <!--fragment search-->
    <style name="search_style_edittext">
        <item name="colorControlNormal">@color/colorPrimary</item>
        <item name="colorControlActivated">@color/colorPrimary</item>
        <item name="colorControlHighlight">@color/colorPrimary</item>
        <item name="android:textColorHint">@color/colorPrimary</item>
    </style>

    <!-- deal add - edittext -->
    <style name="deal_new_editext" parent="Widget.AppCompat.EditText">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:padding">@dimen/dimen_1x</item>
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:textSize">@dimen/text_size_normal</item>
        <item name="android:singleLine">true</item>
        <item name="android:gravity">right</item>
        <item name="android:layout_marginRight">@dimen/dimen_2x</item>

        <item name="android:textColorHint">@color/dark_grey</item>
    </style>
    <!--activity become pro-->
    <style name="become_pro_style_text_view_currency_symbol" parent="android:style/TextAppearance.Medium">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_size_normal</item>
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:text">@string/currency_symbol</item>
        <item name="android:layout_centerVertical">true</item>
    </style>

    <style name="become_pro_style_text_view">
        <item name="android:layout_weight">0.6</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_size_normal</item>
        <item name="android:textColor">@color/textColorPrimary</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:maxLines">2</item>
    </style>

    <style name="become_pro_style_relative">
        <item name="android:layout_weight">0.4</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginRight">@dimen/dimen_2x</item>
    </style>

    <style name="become_pro_style_editext" parent="Widget.AppCompat.EditText">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:paddingRight">@dimen/dimen_1x</item>
        <item name="android:paddingBottom">@dimen/dimen_1x</item>
        <item name="android:paddingTop">@dimen/dimen_1x</item>
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:textSize">@dimen/text_size_normal</item>
        <item name="android:singleLine">true</item>
        <item name="android:hint">@string/input</item>
        <item name="android:gravity">right</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:maxWidth">@dimen/become_pro_maxwidth_edittext</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:maxLength">9</item>
    </style>
    <!-- Edit text -->
    <style name="EditTextBase" parent="@android:style/Widget.EditText">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- EditText themes -->
    <style name="EditTextNormal" parent="@style/EditTextBase">
        <!-- Customize your theme here. -->
        <item name="colorAccent">@color/white</item>

        <item name="colorControlNormal">@color/white</item>
        <item name="colorControlActivated">@color/white</item>
        <item name="colorControlHighlight">@color/white</item>
    </style>

    <!-- spinner -->
    <style name="spinnerItemStyle" parent="android:Widget.TextView.SpinnerItem">

    </style>

    <style name="spinnerDropDownItemStyle" parent="android:TextAppearance.Widget.TextView.SpinnerItem">

    </style>

    <style name="AppTabLayout" parent="Widget.Design.TabLayout">
        <item name="tabIndicatorColor">@color/colorTabTextSelected</item>
        <item name="tabBackground">?attr/selectableItemBackground</item>
        <item name="tabTextAppearance">@style/AppTabTextAppearance</item>
        <item name="android:background">@color/tabbacground</item>
        <item name="tabSelectedTextColor">@color/colorTabTextSelected</item>
        <item name="tabTextColor">@color/colorTabTextUnselect</item>
    </style>

    <!-- for text -->
    <style name="AppTabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">@dimen/text_size_xnormal</item>
        <item name="android:textColor">@color/text_tab_unselected</item>
        <item name="android:textAllCaps">false</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="TextInputLayout" parent="TextAppearance.AppCompat">
        <!-- Hint color and label color in FALSE state -->
        <item name="android:textColorHint">@color/textColorSecondary</item>
        <item name="android:textSize">20sp</item>
        <!-- Label color in TRUE state and bar color FALSE and TRUE State -->
        <item name="colorAccent">@color/textColorSecondary</item>
        <item name="colorControlNormal">@color/textColorSecondary</item>
        <item name="colorControlActivated">@color/textColorSecondary</item>
    </style>

    <!-- QuickBlox style -->
    <style name="ToolbarStyleCall" parent="Widget.AppCompat.Toolbar">
        <item name="popupTheme">@style/ThemeOverlay.AppCompat</item>
        <item name="theme">@style/ThemeOverlay.AppCompat.ActionBar</item>
    </style>

    <style name="MatchWidth">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="WrapContent">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="SeekBarPreferenceTitle" parent="WrapContent">
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:ellipsize">marquee</item>
        <item name="android:singleLine">true</item>
        <item name="android:textAppearance">?android:attr/textAppearanceLarge</item>
        <item name="android:textColor">?android:attr/textColorPrimary</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="RoundedImageButton">
        <item name="android:layout_width">@dimen/dimen_8x</item>
        <item name="android:layout_height">@dimen/dimen_8x</item>
        <item name="android:padding">@dimen/dimen_2x</item>
        <item name="android:scaleType">centerCrop</item>
    </style>

    <style name="EndCallImageButton" parent="RoundedImageButton">
        <item name="android:background">@drawable/selector_call_end</item>
        <item name="android:src">@drawable/ic_phone_hangup</item>
    </style>

    <style name="TakeCallImageButton" parent="RoundedImageButton">
        <item name="android:background">@drawable/selector_call_take</item>
    </style>

    <style name="CallerAvatar">
        <item name="android:layout_width">@dimen/call_avatar_diameter</item>
        <item name="android:layout_height">@dimen/call_avatar_diameter</item>
        <item name="android:padding">24dp</item>
        <item name="android:src">@drawable/ic_person_big</item>
        <item name="android:scaleType">centerCrop</item>
    </style>

    <style name="ListItemIconStyle">
        <item name="android:layout_width">48dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_marginRight">@dimen/dimen_1x</item>
        <item name="android:scaleType">centerInside</item>
    </style>

    <style name="ListItem" parent="MatchWidth">
        <item name="android:layout_height">?android:attr/listPreferredItemHeight</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:orientation">horizontal</item>
    </style>
    <!-- End of QB style -->

    <style name="edt_line_white" parent="Theme.AppCompat.Light.DarkActionBar">
    <!--<item name="colorControlNormal">#ffffff</item>-->
    <!--<item name="colorControlActivated">#ffffff</item>-->
    <item name="colorControlHighlight">#5950b1</item>
    </style>


    <style name="WhiteCheck">
        <item name="colorAccent">#fff</item>
    </style>

</resources>
