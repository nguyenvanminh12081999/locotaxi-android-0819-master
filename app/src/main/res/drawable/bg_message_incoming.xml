<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/transparent"/>
            <stroke android:color="@color/grey" android:width="2px"/>
            <corners android:topLeftRadius="@dimen/dimen_2x"
                android:bottomRightRadius="@dimen/dimen_2x"
                android:topRightRadius="@dimen/dimen_2x"/>
        </shape>
    </item>

    <item
        android:left="0dp"
        android:right="@dimen/dimen_2px"
        android:top="0dp"
        android:bottom="@dimen/dimen_2px">
        <shape android:shape="rectangle">
            <solid android:color="@color/transparent"/>
            <stroke android:color="@color/light_blue_facebook" android:width="2px"/>
            <corners android:topLeftRadius="@dimen/dimen_2x"
                android:bottomRightRadius="@dimen/dimen_2x"
                android:topRightRadius="@dimen/dimen_2x"/>
        </shape>
    </item>
</layer-list>